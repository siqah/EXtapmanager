{
  "manifest_version": 3,
  "name": "Tab Manager",
  "version": "1.0",
  "description": "Suspend inactive tabs automatically to save memory.",
  "permissions": ["tabs", "storage", "alarms", "system.memory"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
